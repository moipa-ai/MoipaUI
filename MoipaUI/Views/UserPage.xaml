<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MoipaUI.ViewModels"
             x:Class="MoipaUI.Views.UserPage"
             x:DataType="viewmodel:UserPageViewModel">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="欢迎来到个人中心" FontSize="28" TextColor="Blue" HorizontalTextAlignment="Center" />
            <Button Text="关于" 
                    HorizontalOptions="Fill"
                    Command="{Binding AboutUserCommand}"/>
        </VerticalStackLayout>
        </ScrollView>
</ContentPage>